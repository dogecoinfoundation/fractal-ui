// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Mint {
  id               String   @id @default(uuid())
  title            String
  description      String
  created_at       DateTime @default(now())
  metadata         Json
  fraction_count   Int
  hash             String
  feed_url         String
  block_height     Int
  tags             Tag[]
  transaction_hash String?
}

model Tag {
  id    String @id @default(uuid())
  name  String @unique
  mints Mint[]
}

model Balance {
  id       String @id @default(uuid())
  currency String
  symbol   String
  value    Int
}

model Config {
  id    String    @id @default(uuid())
  key   ConfigKey @unique
  value String
}

enum ConfigKey {
  TIMEZONE
}
